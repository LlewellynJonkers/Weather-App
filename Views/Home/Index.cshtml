
<div class="card">
    <div class="search">
        <input type="text" placeholder="Search city by name... " 
        spellcheck="false"/>
        <button role="button"><img src="~/Images/search.png" /></button>
    </div>
    <div class="weather">
        <img src="~/Images/clouds.png" class="weather-icon"/>
        <h1 class="temp"><span id="temp">22</span><span>°C</span></h1>
        <h2 class="city">De Aar</h2>
        <div class="details">
            <div class="col">
                <img src="~/Images/humidity.png" />
                <div>
                    <p class="humidity">50%</p>
                    <p>Humidity</p>
                </div>
            </div>
            <div class="col">
                <img src="~/Images/wind.png" />
                <div>
                    <p class="wind">15 km/hr</p>
                    <p>Wind Speed</p>
                </div>
            </div>
        </div>
    </div>
</div>